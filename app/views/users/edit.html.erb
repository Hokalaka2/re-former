<%= form_for(@user) do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email, placeholder: "YourEmail@something.com"%>
    <%= f.label :username, "Your Username Here" %>
    <%= f.text_field :username %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.submit %>
<% end %>
